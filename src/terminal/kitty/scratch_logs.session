layout vertical
launch --title "journalctl :: system" journalctl --follow --no-tail --system --boot
launch --title "journalctl :: user" journalctl --follow --no-tail --user --boot

new_tab
layout vertical
launch --title "Compositor :: stdout" sh -c 'tail --lines=+0 --follow ${XDG_STATE_HOME}/log/sway/out.log'
launch --title "Compositor :: stderr" sh -c 'tail --lines=+0 --follow ${XDG_STATE_HOME}/log/sway/err.log'
